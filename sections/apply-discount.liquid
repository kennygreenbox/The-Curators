    {
        "name": "Apply Discount",
        "settings": [
            {
                "type": "text",
                "id": "discount_code",
                "label": "Discount Code"
            }
        ],
        "presets": [
            {
                "name": "Apply Discount"
            }
        ]
    }
{% endschema %}