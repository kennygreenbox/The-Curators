{% assign discount_code = section.settings.discount_code %}

{{cart | json}}



{% if discount_code != blank %}
    <script>
    (function() {
      var discountCode = "discount/{{ discount_code | url_encode }}";
      var firstPartOfUrl = window.location.origin + "/";
      var lastPartOfUrl = window.location.pathname + window.location.search + window.location.hash;
      var redirectUrl = firstPartOfUrl + discountCode + "?redirect=" + lastPartOfUrl;
     // window.location.href = redirectUrl;
    })();
    </script>
{% endif %}

