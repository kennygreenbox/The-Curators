{% assign s = section.settings %}
    <div class="padding-y-default-sml container-inner">
        <div class="fadeIn txt-ctr content-wrap">
            <div class="heading-wrap multi-font-heading">
                <h2>
                    {{ s.rest_text }}
                    <span class="pos-relative font-alt">{{ s.deco_text }}<span class="pos-absolute underline-animation"><img src="{{'underline-yellow-b.svg' |  asset_url }}" alt=""></span></span>
                    </h2>
            </div>
        </div>

        <div class="margin-top-xl social-marquee-slider marquee-slider-wrap swiper swiper-container">
            <div class="swiper-wrapper">
                {% for block in section.blocks %}
                    {% assign b = block.settings %}
                    {% if block.type == 'img' %}
                        <div class="slide-item margin-right-default swiper-slide br-20x">
                            {% render 'responsive-image', image: b.image image_class: 'bg-img' %}
                        </div>                            
                        {% elsif block.type == 'text' %}
                            <div class="slide-item margin-right-default swiper-slide br-20x">
                                <div class="has-turquoise-alt-background padding-l txt-ctr flex flex-col flex-space-between review-tile" style="color: {{ b.color }}; background-color: {{ b.bg_color }};">
                                    <div class="flex flex-x-align star-wrap">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="19" viewBox="0 0 18 19" fill="none">
                                            <path id="Vector" d="M18 7.81962L11.4596 7.37293L8.99641 0.94458L6.53326 7.37293L0 7.81962L5.01096 12.2397L3.36663 18.9446L8.99641 15.2478L14.6262 18.9446L12.9819 12.2397L18 7.81962Z" fill="{{ b.color }}"/>
                                        </svg>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="19" viewBox="0 0 18 19" fill="none">
                                            <path id="Vector" d="M18 7.81962L11.4596 7.37293L8.99641 0.94458L6.53326 7.37293L0 7.81962L5.01096 12.2397L3.36663 18.9446L8.99641 15.2478L14.6262 18.9446L12.9819 12.2397L18 7.81962Z" fill="{{ b.color }}"/>
                                        </svg>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="19" viewBox="0 0 18 19" fill="none">
                                            <path id="Vector" d="M18 7.81962L11.4596 7.37293L8.99641 0.94458L6.53326 7.37293L0 7.81962L5.01096 12.2397L3.36663 18.9446L8.99641 15.2478L14.6262 18.9446L12.9819 12.2397L18 7.81962Z" fill="{{ b.color }}"/>
                                        </svg>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="19" viewBox="0 0 18 19" fill="none">
                                            <path id="Vector" d="M18 7.81962L11.4596 7.37293L8.99641 0.94458L6.53326 7.37293L0 7.81962L5.01096 12.2397L3.36663 18.9446L8.99641 15.2478L14.6262 18.9446L12.9819 12.2397L18 7.81962Z" fill="{{ b.color }}"/>
                                        </svg>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="19" viewBox="0 0 18 19" fill="none">
                                            <path id="Vector" d="M18 7.81962L11.4596 7.37293L8.99641 0.94458L6.53326 7.37293L0 7.81962L5.01096 12.2397L3.36663 18.9446L8.99641 15.2478L14.6262 18.9446L12.9819 12.2397L18 7.81962Z" fill="{{ b.color }}"/>
                                        </svg>
                                    </div>
                                    {{ b.text }}
                                </div>
                            </div>                        
                    {% endif %}                    
                {% endfor %}
            </div>
        </div>
    </div>


{% schema %}
    {
        "name": "Review Image",
        "tag": "section",
        "class": "section padding-section review-img-feed",
        "settings": [
            {
            "type": "text",
            "id": "deco_text",
            "label": "Decoration text"
            },{
            "type": "text",
            "id": "rest_text",
            "label": "Rest of the text"
            }
        ],"blocks": [
            {
                "type": "text",
                "name": "Text",
                "settings": [
                    {
                    "type": "richtext",
                    "id": "text",
                    "label": "Text"
                    },{
                    "type": "color",
                    "id": "color",
                    "label": "Color"
                    },{
                    "type": "color",
                    "id": "bg_color",
                    "label": "Background Color"
                    }
                ]
            },{
                "type": "img",
                "name": "Image",
                "settings": [
                    {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                    }
                ]
            }
        ],
        "presets": [
        {
            "name": "Review Image"
        }
      ]
    }
{% endschema %}